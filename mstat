#!/bin/bash

display_menu() {
	echo "Make your selection:
	1) Display memory usage
	2) Display disk usage
	3) Display network usage
	4) Quit"

}

echo "Welcome to MStat";
while true; do
	display_menu;
	read sel;
	case $sel in
		1)
			echo "You chose 1."
			;;
		2)
			echo "You chose 2."
			;;
		3)
			echo "You chose 3."
			;;
		4)
			echo "Quitting."
			break;;
		*)
			echo "Invalid command."
			exit 1
			;;
	esac;
done;
